{
  "name": "@jh-code/angular2-webpack-starter",
  "version": "1.0.5",
  "description": "Basic Angular2 app with AoT compilation for production and a development environment.",
  "main": "app/main.ts",
  "scripts": {
    "build": "npm run clean && npm run compass:prod && npm run ngc && npm run webpack:prod",
    "ci": "npm run compass:prod && npm run ngc && npm run webpack:ci",
    "clean": "rimraf dist build",
    "compass:prod": "compass compile --output-style compressed --force",
    "compass:dev": "compass watch",
    "ngc": "ngc -p tsconfig.prod.json",
    "serve": "lite-server",
    "start": "npm-run-all --parallel compass:dev webpack:dev",
    "test-build": "rimraf node_modules && yarn && npm run build && npm run serve",
    "webpack:ci": "webpack --config webpack.prod.config.js",
    "webpack:dev": "webpack-dev-server --inline --progress --colors",
    "webpack:prod": "webpack -p --progress --config webpack.prod.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jh-code/angular2-webpack-starter"
  },
  "keywords": [
    "tree-shaking",
    "typescript",
    "webpack",
    "angular",
    "angular2"
  ],
  "author": {
    "name": "jh-code",
    "email": "jared@codeninja.guru"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/common": "^2.4.7",
    "@angular/compiler": "^2.4.7",
    "@angular/core": "^2.4.7",
    "@angular/forms": "^2.4.7",
    "@angular/http": "^2.4.7",
    "@angular/platform-browser": "^2.4.7",
    "@angular/platform-browser-dynamic": "^2.4.7",
    "@angular/router": "^3.4.7",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-alpha.20",
    "@ngrx/core": "^1.2.0",
    "@ngrx/router-store": "^1.2.5",
    "@ngrx/store": "^2.2.1",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.9",
    "reselect": "^2.5.4",
    "rxjs": "^5.1.1",
    "zone.js": "^0.7.7"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^2.4.7",
    "@ngtools/webpack": "^1.2.9",
    "@types/node": "^7.0.5",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "3.0.4-rc.2",
    "codelyzer": "^2.0.0",
    "connect-history-api-fallback": "^1.3.0",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.5",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "lite-server": "^2.2.2",
    "npm-run-all": "^4.0.1",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "script-ext-html-webpack-plugin": "^1.7.1",
    "style-ext-html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.13.1",
    "ts-helpers": "^1.1.2",
    "tslint": "^4.4.2",
    "tslint-loader": "^3.4.2",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0"
  }
}
